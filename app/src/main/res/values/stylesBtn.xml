<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="estiloBoton" parent="textoBtn">
        <item name="android:textColor">@color/secundaryTextColor</item>
        <item name="android:backgroundTint">@color/primaryDarkColor</item>
        <item name="android:elevation">20dp</item>
        <item name="android:textSize">@dimen/tamanoTextoBtn</item>
    </style>

    <style name="textoBtn">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="estiloTitulos" parent="estiloBoton">
        <item name="android:textColor">@color/secundaryTextColor</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:textSize">@dimen/tamanoTextoGrandes</item>
    </style>

    <style name="estiloBotonBotoneraSeleccion" parent="android:style/Widget.Button">
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/tamanoTextoBotoneraSeleccion</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


</resources>